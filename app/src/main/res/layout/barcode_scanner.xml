<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cameraContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/scanner_back_color"
        android:padding="10sp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="50sp"
            android:id="@+id/image_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_light"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:background="@color/scanner_color"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/scanner_back_color"
        android:padding="10sp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_help" />

        <ImageView
            android:id="@+id/image_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:src="@mipmap/icon_keyboard"
            />
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_close"
            />
    </LinearLayout>

</LinearLayout>