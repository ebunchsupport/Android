<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/image_back"
    android:layout_margin="3dp"
    android:padding="2dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/fcb_customer_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/image_back_new"
                android:layout_height="wrap_content"
                android:padding="3sp"
                >
                <ImageView

                    android:layout_width="120sp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_height="100sp"
                    android:id="@+id/vehical_image"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_marginTop="5dp"
                android:paddingLeft="2dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:autoLink="web|email"
                    android:textColor="@color/BLACK"
                    android:visibility="gone"
                    android:text="Car"
                    android:id="@+id/textView7" />
                <!--     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:visibility="gone"
                         >
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:text="Info"
                 android:textColor="@color/light_gray"
                 android:id="@+id/textView8" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:textAppearance="?android:attr/textAppearanceSmall"
                             android:text=""
                             android:visibility="invisible"
                             android:layout_marginRight="2dp"
                             android:gravity="right"
                             android:textColor="@color/light_gray"
                             android:id="@+id/user_name" />
                     </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <!--  <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceSmall"
                              android:text="VIN"
                              android:textColor="@color/BLACK"
                              android:id="@+id/textView9" />-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:gravity="left"
                            android:textSize="12sp"
                            android:textColor="@color/color_toolbar"
                            android:id="@+id/textViewVin_number" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Make"
                                    android:textColor="@color/BLACK"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text=""
                                    android:textColor="@color/gray_light"
                                    android:id="@+id/textViewMake" />



                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Model"
                                    android:textColor="@color/BLACK"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text=""
                                    android:textColor="@color/gray_light"
                                    android:id="@+id/textViewTransist" />


                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Year"
                                    android:textColor="@color/BLACK"
                                    />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="gdfhgf"
                                    android:textSize="10sp"
                                    android:textStyle="italic"
                                    android:textColor="@color/gray_light"
                                    android:id="@+id/textViewYear" />
                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3"
                                android:layout_marginTop="2dp"
                                >
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:textSize="10sp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Price"
                                    android:textColor="@color/BLACK"
                                    />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="gdfhgf"
                                    android:textSize="10sp"
                                    android:textStyle="italic"
                                    android:textColor="@color/back_dark_blue"
                                    android:id="@+id/textViewVinNum" />
                            </TableRow>
                        </TableLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>