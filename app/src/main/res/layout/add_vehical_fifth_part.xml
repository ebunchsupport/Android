<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="Speedo display"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/txt_view_color" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/radio_btn_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="KM" />

                <RadioButton
                    android:id="@+id/radio_btn_miles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="MILES" />

            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/txt_view_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="Do you need speedo converter"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/txt_view_color" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/radio_btn_yes_km"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Yes km to miles" />

                <RadioButton
                    android:id="@+id/radio_btn_no_already_miles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="No already in miles" />

                <RadioButton
                    android:id="@+id/radio_btn_no_need"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="No needs km sticker" />
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/txt_view_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:id="@+id/txt_view_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Km on vehical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/txt_view_color" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/edit_txt_km_on_vehical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:inputType="numberDecimal"
                android:background="@color/WHITE"
                android:maxLines="1"
                android:textColor="@color/edit_txt_color" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/txt_view_color"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text="Do you require transportation to ri compound"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/txt_view_color" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/radio_required_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio_required_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="No" />

            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="@color/txt_view_color"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Attachments"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/color_toolbar"
            />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"

                        >
                        <ImageView
                            android:id="@+id/imageViewphoto_passenger_air_bag"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/add_camera" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Passenger side air bag"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/txt_view_color" />

                       
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="(typically located in dash passenger side)"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textColor="@color/txt_view_color" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="2dp"
                            android:background="@color/txt_view_color"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@color/WHITE"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewphoto_of_driver_seat_belt"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/add_camera" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Driver seat belt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/txt_view_color" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="2dp"
                            android:background="@color/txt_view_color"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/imageViewphoto_of_driver_air_bag"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/add_camera" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Driver air bag"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/txt_view_color" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="2dp"
                            android:background="@color/txt_view_color"/>
                    </LinearLayout>
                </RelativeLayout>
        
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageViewphoto_of_speedo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/add_camera" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Speedo image"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/txt_view_color" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="2dp"
                            android:background="@color/txt_view_color"/>
                    </LinearLayout>
                </RelativeLayout>
        <Button
            android:id="@+id/fifth_button_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/button_color"
            android:text="@string/save_and_next"
            android:textColor="@color/WHITE" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_msg_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@color/msg_box_screen_color"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30sp"
            android:layout_centerInParent="true"
            android:background="@drawable/popup_backgound"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/msg_close"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/close_red_circle"
                android:src="@drawable/close_sign" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Please put your remark"
                android:textColor="@color/BLACK"
                android:textSize="22dp" />

            <EditText
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/edit_txt_remark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edtit_text_back"
                android:gravity="start"
                android:hint="Remark"
                android:inputType="text"
                android:maxLines="5"
                android:minLines="5"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:textColor="@color/edit_txt_color" />

            <Button
                android:id="@+id/fifth_button_final"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="120dp"
                android:background="@color/image_back_color"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/save_and_next"
                android:textColor="@color/WHITE" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>