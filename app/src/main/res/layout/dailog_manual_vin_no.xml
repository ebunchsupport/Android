<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dailog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/clost_img_btn"
            android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/edit_vin_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:hint="Enter Vin Number"/>

            <Button
                android:id="@+id/btn_verify_vin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/image_back_color"
                android:alpha=".3"
                android:padding="10sp"
                android:text="Verify Vin"
                android:textColor="@color/WHITE" />

        </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/clost_img_btn"
        android:src="@mipmap/cross_sign"
        android:alpha=".3"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>