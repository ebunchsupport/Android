<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="Is epa sticker missing or damaged"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_btn_is_epa_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radio_btn_is_epa_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="No" />

        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/txt_view_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="(Located underside of hood or in engine area)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/txt_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Note : Please call oem dealer and order epa label"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="Vin plate missing or not maching"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_vin_plate_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radio_vin_plate_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="No" />

        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/txt_view_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="(Located driver corner of windsheild)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="Emissions and exhaust all stock"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/txt_view_color" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_emission_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/radio_emission_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="No" />

        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/txt_view_color"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Attachments"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/color_toolbar"
        />
            <RelativeLayout
 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewphoto_vin_plate"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/add_camera" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Vin plate"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_view_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="(Located bottom drivers corner of windsheild)"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/txt_view_color" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/txt_view_color"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewphoto_of_rear_passenger_side"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/add_camera" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Rear and passenger of vehicle"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_view_color" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/txt_view_color"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewphoto_passenger_seat_belt"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/add_camera" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Passenger seat belt"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_view_color" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/txt_view_color"/>
                </LinearLayout>
            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                >
                <LinearLayout
                    android:id="@+id/photo_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/imageViewphoto_of_frnt_driver"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/add_camera" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Front and driver side"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/txt_view_color" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:background="@color/txt_view_color"/>
                </LinearLayout>
            </RelativeLayout>
    
    <Button
        android:id="@+id/fourth_button_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/image_back_color"
        android:text="@string/save_and_next"
        android:textColor="@color/WHITE" />

</LinearLayout>