<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dvn.vindecoder.ui.seller.SelectBarCode_OR_InsertManually">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_color"
            android:text="Get car details from Bar Code"
            android:textColor="@color/WHITE"
            android:id="@+id/bar_code_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/button_color"
            android:textColor="@color/WHITE"
            android:text="Insert Manually"
            android:id="@+id/insert_manually_btn" />

    </LinearLayout>


</RelativeLayout>
