<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:text="Is vehicle recall free"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt_view_color" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_btn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/radio_btn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_line_image"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center_vertical"
                    android:text="Is manufactures label missing/damaged"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt_view_color" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/label_missing_btn_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/label_missing_btn_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:text="No" />

                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/light_line_image"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_ocm_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <TextView
                    android:id="@+id/txt_view_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Note : Contact oem dealer to order new manufacturers label"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt_view_color" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Attachments"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/color_toolbar"
                />
            

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        >
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                            <ImageView
                                android:id="@+id/imageViewphoto_of_bill_sale"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/add_camera" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Copy bill of sale"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/txt_view_color" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/light_line_image"/>
                    </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
 
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imageViewphoto_of_registration"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/add_camera" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Copy of registration"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/txt_view_color" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/light_line_image"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        >
                        <LinearLayout
                            android:id="@+id/is_recal_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imageViewphoto_of_recall"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/add_camera" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Copy of recall doc"
                                android:gravity="center"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/txt_view_color" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/light_line_image"/>
                        </LinearLayout>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white_color"
                        >

                        <LinearLayout
                            android:id="@+id/photo_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:visibility="gone">


                                <ImageView
                                    android:id="@+id/imageViewphoto_of_manufacture_label"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/add_camera" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Photo of manufacture label"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/txt_view_color" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="2dp"
                                android:background="@color/light_line_image"/>
                        </LinearLayout>
                    </RelativeLayout>

            <Button
                android:id="@+id/second_button_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/image_back_color"
                android:text="@string/save_and_next"
                android:textColor="@color/WHITE" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>